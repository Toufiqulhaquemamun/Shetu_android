<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearseller"
                >

                <TextView

                    style="@style/label"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="বিক্রেতার নাম"
                    android:visibility="visible">
                </TextView>

                <TextView
                    android:id="@+id/seller_name"
                    android:layout_width="match_parent"
                    style="@style/label"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:textStyle="bold"
                    android:visibility="visible"></TextView>
            </LinearLayout>

            <View
                android:id="@+id/view2"
                style="@style/Divider"
                android:layout_marginTop="8dp"
                android:layout_below="@id/linearseller"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linernid_date"
                android:layout_below="@id/view2"

                >

                <TextView
                    style="@style/label"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="বিক্রয়ের তারিখ"
                    >
                </TextView>

                <TextView
                    android:id="@+id/sale_date_time"
                    android:layout_width="match_parent"
                    style="@style/label"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:textStyle="bold"
                    ></TextView>
            </LinearLayout>

            <View
                android:id="@+id/view3"
                style="@style/Divider"
                android:layout_marginTop="8dp"
                android:layout_below="@id/linernid_date"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearbid_enddate"
                android:layout_below="@id/view3"
                >

                <TextView
                    style="@style/label"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text=" পন্যের নাম">
                </TextView>

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    style="@style/label"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:textStyle="bold"
                    android:visibility="visible"></TextView>
            </LinearLayout>

            <View
                android:id="@+id/view4"
                style="@style/Divider"
                android:layout_marginTop="8dp"
                android:layout_below="@id/linearbid_enddate"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearbid_status"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_below="@id/view4"
                >

                <TextView
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="মোট  দাম"
                    android:layout_weight="0.2"
                    android:visibility="visible">
                </TextView>

                <TextView
                    android:id="@+id/product_totalprice"
                    android:layout_width="0dp"
                    style="@style/label"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="0.3"
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:visibility="visible"></TextView>
            </LinearLayout>



            <View
                android:id="@+id/view6"
                style="@style/Divider"
                android:layout_marginTop="8dp"
                android:layout_below="@id/linearbid_status"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linernid_tokenentry"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_below="@id/view6"

                >

                <TextView
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:text="সার্ভিস চার্জ"
                    >
                </TextView>

                <TextView
                    android:id="@+id/service_charge"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    style="@style/label"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:visibility="visible"></TextView>
                <TextView
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:text="এজেন্টের অংশ"
                    >
                </TextView>

                <TextView
                    android:id="@+id/agent_share"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    style="@style/label"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:visibility="visible"></TextView>
            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>