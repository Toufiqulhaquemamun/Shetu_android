<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearbid_enddate"
                >

                <TextView
                    style="@style/label"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text=" পন্যের নাম">
                </TextView>

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    style="@style/label"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:textStyle="bold"
                    android:visibility="visible"></TextView>
            </LinearLayout>
            <View
                android:id="@+id/view3"
                style="@style/Divider"
                android:layout_marginTop="8dp"
                android:layout_below="@id/linearbid_enddate"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearbid_date"
                android:layout_below="@id/view3"
                >

                <TextView
                    style="@style/label"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="সরবরাহের স্থান">
                </TextView>

                <TextView
                    android:id="@+id/product_delivery_place"
                    android:layout_width="match_parent"
                    style="@style/label"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:textStyle="bold"
                    android:visibility="visible"></TextView>
            </LinearLayout>

            <View
                android:id="@+id/view4"
                style="@style/Divider"
                android:layout_marginTop="8dp"
                android:layout_below="@id/linearbid_date"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linernid_tokenentry"
                android:orientation="horizontal"
                android:layout_below="@id/view4"

                >
                <TextView
                    style="@style/label"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="সরবরাহের সময়">
                </TextView>

                <TextView
                    android:id="@+id/product_delivery_time"
                    android:layout_width="match_parent"
                    style="@style/label"
                    android:layout_height="wrap_content"
                    android:text="@string/none"
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:textStyle="bold"
                    android:visibility="visible">
                </TextView>

            </LinearLayout>
            <View
                android:id="@+id/view6"
                style="@style/Divider"
                android:layout_marginTop="8dp"
                android:layout_below="@id/linernid_tokenentry"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearbid_status"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_below="@id/view6"
                >

                <TextView
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="পরিমান"
                    android:visibility="visible">
                </TextView>

                <TextView
                    android:id="@+id/product_amount"
                    android:layout_width="0dp"
                    style="@style/label"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="0.3"
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:textStyle="bold"
                    android:visibility="visible"></TextView>
                <TextView
                    style="@style/label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="পন্যের দর"
                    android:layout_weight="0.2"
                    android:visibility="visible">
                </TextView>

                <TextView
                    android:id="@+id/product_rate"
                    android:layout_width="0dp"
                    style="@style/label"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_weight="0.3"
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:visibility="visible"></TextView>
            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>