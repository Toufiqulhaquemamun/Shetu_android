<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linerbuyier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView"
                    style="@style/label"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="নাম"
                    android:visibility="visible"></TextView>

                <TextView
                    android:id="@+id/file_name_txt"
                    style="@style/label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:textStyle="bold"
                    android:visibility="visible"></TextView>
            </LinearLayout>

            <View
                android:id="@+id/view1"
                style="@style/Divider"
                android:layout_below="@id/linerbuyier"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/linearsellr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view1">

                <TextView

                    style="@style/label"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="ব্যবসার ধরন"
                    android:visibility="visible"></TextView>

                <TextView
                    android:id="@+id/business_type_txt"
                    style="@style/label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:textStyle="bold"
                    android:visibility="visible"></TextView>
            </LinearLayout>

            <View
                android:id="@+id/view2"
                style="@style/Divider"
                android:layout_below="@id/linearsellr"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:id="@+id/linernid_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2">

                <TextView
                    style="@style/label"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="বর্ণনা"
                    android:visibility="visible"></TextView>

                <TextView
                    android:id="@+id/description_txt"
                    style="@style/label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/shadow_color"
                    android:textSize="@dimen/album_title"
                    android:textStyle="bold"
                    android:visibility="visible"></TextView>
            </LinearLayout>

            <!--<View-->
            <!--android:id="@+id/view3"-->
            <!--style="@style/Divider"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:layout_below="@id/linernid_date"-->
            <!--/>-->
            <LinearLayout
                android:id="@+id/linearbid_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linernid_date"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/attach_file_txt"
                    style="@style/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button"
                    android:text="      সংযুক্ত ফাইল      "
                    android:textColor="@color/white"
                    android:textSize="@dimen/album_title"
                    android:textStyle="bold"
                    android:visibility="visible"></Button>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>