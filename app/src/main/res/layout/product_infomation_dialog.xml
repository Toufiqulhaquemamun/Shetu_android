<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:id="@+id/container"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="110dp"
                            style="@style/label"
                            android:layout_height="wrap_content"
                            android:text="@string/serial"/>
                        <TextView
                            android:id="@+id/serial"
                            android:layout_width="110dp"
                            android:layout_weight="5"
                            android:layout_height="wrap_content"
                            android:text="dflkfdlkfdlk"
                            android:textColor="@color/shadow_color"
                            android:textSize="@dimen/album_title"
                            android:padding="@dimen/padding"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View style="@style/Divider"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="110dp"
                            style="@style/label"
                            android:layout_height="wrap_content"
                            android:text="@string/commodity_name"/>
                        <TextView
                            android:id="@+id/community_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding"
                            android:text="dflkfdlkfdlk"
                            android:textColor="@color/shadow_color"
                            android:textSize="@dimen/album_title"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View style="@style/Divider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/commodity_desc_container"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="110dp"
                            style="@style/label"
                            android:layout_height="wrap_content"
                            android:text="@string/commodity_desc"/>
                        <TextView
                            android:id="@+id/commodity_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="dflkfdlkfdlk"
                            android:textColor="@color/shadow_color"
                            android:textSize="@dimen/album_title"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View style="@style/Divider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/grade_container"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="110dp"
                            style="@style/label"
                            android:layout_height="wrap_content"
                            android:text="@string/grade"/>
                        <TextView
                            android:id="@+id/grade"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="dflkfdlkfdlk"
                            android:textColor="@color/shadow_color"
                            android:textSize="@dimen/album_title"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View style="@style/Divider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="110dp"
                            style="@style/label"
                            android:layout_height="wrap_content"
                            android:text="@string/unit"/>
                        <TextView
                            android:id="@+id/per_unit_cost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="dflkfdlkfdlk"
                            android:textColor="@color/shadow_color"
                            android:textSize="@dimen/album_title"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View style="@style/Divider"/>
                    <LinearLayout
                        android:id="@+id/criteria_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="110dp"
                            style="@style/label"
                            android:layout_height="wrap_content"
                            android:text="@string/criteria" />
                        <TextView
                            android:id="@+id/criteria"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="dflkfdlkfdlk"
                            android:textColor="@color/shadow_color"
                            android:textSize="@dimen/album_title"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View style="@style/Divider"/>
                    <LinearLayout
                        android:id="@+id/production_process_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="110dp"
                            style="@style/label"
                            android:layout_height="wrap_content"
                            android:text="@string/production_process"/>
                        <TextView
                            android:id="@+id/production_process"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="dflkfdlkfdlk"
                            android:textColor="@color/shadow_color"
                            android:textSize="@dimen/album_title"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View style="@style/Divider"/>
                    <LinearLayout
                        android:id="@+id/grade_document_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="110dp"
                            style="@style/label"
                            android:layout_height="wrap_content"
                            android:text="@string/grade_document"/>
                        <TextView
                            android:id="@+id/grade_document"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="dflkfdlkfdlk"
                            android:textColor="@color/shadow_color"
                            android:textSize="@dimen/album_title"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View style="@style/Divider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="110dp"
                            style="@style/label"
                            android:layout_height="wrap_content"
                            android:text="@string/category"/>
                        <TextView
                            android:id="@+id/category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="dflkfdlkfdlk"
                            android:textColor="@color/shadow_color"
                            android:textSize="@dimen/album_title"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <View style="@style/Divider"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>




</LinearLayout>